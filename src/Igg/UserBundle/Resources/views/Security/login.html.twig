{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div class="container">
    <div class="row vertical-offset-100">
    	<div class="col-md-4 col-md-offset-4">
    		<div class="panel panel-default">
			  	<div class="panel-heading">
			    	<h3 class="panel-title">Please sign in</h3>
			 	</div>
			  	<div class="panel-body">
			    	<div class="container">
      			<form  class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post" id="login">
      				<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
					<div class="form-group">
						<div class="col-md-3">
							<input type="text" class="form-control" placeholder="{{'Login.User'|trans|capitalize}}" id="username" name="_username" value="{{ last_username }}" required="required" />
						</div>
					</div>
					<!-- Password -->
					<div class="form-group">
						<div class="col-md-3">
							<input type="password" class="form-control" placeholder="{{'Login.Password'|trans|capitalize}}" id="password" name="_password" required="required" />
						</div>
					</div>
					<!-- Remember me checkbox and sign in button -->
					{% if error %}
						<div class="row alert alert-danger">	
								    <div>{{ error|trans }}</div>
						</div>
					{% endif %}
					<div class="form-group">
						<div>
							<div class="checkbox">
								<label>
									<input type="checkbox" id="remember_me" name="_remember_me" value="off" />
    								<label for="remember_me">{{'Login.RememberMe'|trans|capitalize}}</label> 		
								</label>
							</div>
						</div>
					</div>
					<div class="col-md-3">
						<button type="submit" id="_submit" class="btn btn-danger pull-right" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" >{{'Login.Enter'|trans|capitalize}}</button>
					</div>
					<br />
				</form>	
			    </div>
			</div>
		</div>
	</div>
</div>
{% endblock fos_user_content %}